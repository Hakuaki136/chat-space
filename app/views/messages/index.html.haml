.chat-side
  .chat-side__user
    .chat-side__user-content
      .chat-side__user-name
        Kent Toshima
      = link_to "/groups/new", class: "chat-side__user--new-group" do
        %i.fa.fa-pencil-square-o
      = link_to "/users/edit", class: "chat-side__user--edit-user" do
        %i.fa.fa-cog
  .chat-side__groups
    .chat-side__groups-list
      = link_to "/groups/1050/messages" do
        .chat-side__group
          .chat-side__group-name
            test
          .chat-side__group-message
            test_message

.chat-main
  .chat-main__header
    .chat-main__header--group.clearfix
      .chat-main__header--group-name
        test
      = link_to "/groups/1050/edit", class: "chat-main__header--group-edit-btn" do
        edit
    .chat-main__header-members
      MEMBER:
      %i
        Kent Toshima
  .chat-main__body
    .chat-main__body--messages-list
      .chat-main__message.clearfix{data: {id: "1789"}}
        .chat-main__message-name
          Kent Toshima
        .chat-main__message-time
          2018/06/14 13:38:11
        .chat-main__message-body
          test message
          / = image_tag "https://s3-ap-northeast-1.amazonaws.com/reviewchatspace/uploads/message/image/1789/1.png"
      .chat-main__message.clearfix{data: {id: "1788"}}
        .chat-main__message-name
          Kent Toshima
        .chat-main__message-time
          2018/06/14 13:38:11
        .chat-main__message-body
          test message
          / = image_tag 'unknown'
  .chat-main__footer
    %form.chat-main__footer-form#new_message{:action => "/groups/1050/messages", :method => "post"}
      .chat-main__footer-body
        %input.message#message_body{placeholder: "type a message", type: "text", name: "message[body]"}
        %label.chat-file{for: "message_image"}
          %input.image#message_image{type: "file", name: "message[image]"}
          %i.fa.fa-image
      %input.submit{type: "submit", name: "commit", value: "Send", data: {disable: {with: "Send"}}}
